<!-- ISE Tools schema for the Internet Shakespeare Editions (the mothership). -->

<schema edition="default" group="default">
  <tags>
    <tag name="ACT">
      <attribute name="n" type="number"/>
    </tag>
    <tag name="ABBR">
      <attribute name="expan" type="string"/>
    </tag>
    <tag name="ADD"/>
    <tag name="AMBIG"/>
    <tag name="BACKMATTER"/>
    <tag name="BL" depreciated="Use BLL for black letter or L for blank line instead of BL."/>
    <tag name="BLL" where="oldspelling"/>
    <tag name="BLOCKQUOTE" depreciated="Use QUOTE instead of BLOCKQUOTE"/>
    <tag name="BR" empty="empty"/>
    <tag name="C"/>
    <tag name="CL"/>
    <tag name="COL">
      <attribute name="n" type="select">
        <option>0</option>
        <option>1</option>
        <option>2</option>
      </attribute>
    </tag>
    <tag name="CW"/>
    <tag name="DIV">
      <attribute name="link" type="string" optional="optional" depreciated="Link attributes should be dropped from the text."/>
      <attribute name="name" type="select">
        <option>Argument</option>
        <option>Colophon</option>
        <option>Dedication</option>
        <option>Disposition of the Characters</option>
        <option>Dumb Show</option>
        <option>Epilogue</option>
        <option>Epistle [1]</option>
        <option>Epistle [2]</option>
        <option>Epistle</option>
        <option>Introduction</option>
        <option>List of Characters</option>
        <option>Prologue</option>
        <option>The Names of the Actors</option>
        <option>Titlepage [1]</option>
        <option>Titlepage [2]</option>
        <option>Titlepage</option>
      </attribute>
    </tag>
    <tag name="EM"/>
    <tag name="EPILOGUE" namespace="" depreciated="Use BACKMATTER or DIV instead of EPILOGUE"/>
    <tag name="FONTGROUP">
      <attribute name="n" type="match" match="^[1-6]$" renumber="no" />
    </tag>
    <tag name="FOREIGN">
      <attribute name="lang" type="string"/>
    </tag>
    <tag name="FRONTMATTER"/>
    <tag name="H1" depreciated="Use LD instead of H1."/>
    <tag name="H2" depreciated="Use LD instead of H2."/>
    <tag name="H3" depreciated="Use LD instead of H3."/>
    <tag name="H4" depreciated="Use LD instead of H4."/>
    <tag name="H5" depreciated="Use LD instead of H5."/>
    <tag name="H6" depreciated="Use LD instead of H6."/>
    <tag name="HW">
      <attribute name="t" type="select">
        <option>prev</option>
        <option>next</option>
      </attribute>
    </tag>
    <tag name="iembed">
      <attribute name="site" type="string" optional="optional" />
      <attribute name="component" type="select" optional="optional">
        <option>imagedb</option>
        <option>text</option>
        <option>slt</option>
        <option>sip</option>
        <option>facsimile</option>
        <option>link</option>
        <option>static</option>
      </attribute>
      <attribute name="href" type="string" />
      <attribute name="showCaption" type="select" optional="optional">
        <option>true</option>
        <option>false</option>
      </attribute>
      <attribute name="height" type="number" optional="optional" />
      <attribute name="width" type="number" optional="optional" />
      <attribute name="align" type="select" optional="optional">
        <option>left</option>
        <option>center</option>
        <option>right</option>
        <option>lightbox</option>
        <option>auto</option>
      </attribute>
      <attribute name="lightbox" type="string" optional="optional" />
      <attribute name="longCaption" type="string" optional="optional" />
    </tag>
    <tag name="ilink">
      <attribute name="site" type="string" optional="optional" />
      <attribute name="component" type="select" optional="optional">
        <option>imagedb</option>
        <option>text</option>
        <option>slt</option>
        <option>sip</option>
        <option>facsimile</option>
        <option>link</option>
        <option>static</option>
      </attribute>
      <attribute name="href" type="string" />
    </tag>
    <tag name="I"/>
    <tag name="INDENT">
      <attribute name="n" type="number" renumber="no" />
    </tag>
    <tag name="iseHeader"/>
    <tag name="J"/>
    <tag name="L" empty="empty">
      <attribute name="n" type="number" optional="optional" empty="empty" />
      <attribute name="part" type="select" optional="optional">
        <option>i</option>
        <option>m</option>
        <option>f</option>
      </attribute>
    </tag>
    <tag name="LB" depreciated="Use L for lineation instead of LB."/>    
    <tag name="LD"/>
    <tag name="LEM"/>
    <tag name="LINEGROUP">
      <attribute name="form" type="select">
        <option>couplet</option>
        <option>coupletSequence</option>
        <option>sonnet</option>
        <option>quatrain</option>
        <option>rhymeSequence</option>
      </attribute>
      <attribute name="rhyme" type="string"/>
    </tag>
    <tag name="LINK" empty="empty">
      <attribute name="rel" type="string" optional="optional"/>
      <attribute name="rev" type="string" optional="optional"/>
      <attribute name="href" type="string" optional="optional"/>
      <attribute name="order" type="number" optional="optional"/>
    </tag>
    <tag name="LN"/>
    <tag name="LS"/>
    <tag name="MARG">
      <attribute name="loc" type="select">
        <option>left</option>
        <option>right</option>
      </attribute>
    </tag>
    <tag name="META" empty="empty">
      <attribute name="name" type="string"/>
      <attribute name="content" type="string" empty="empty"/>
      <attribute name="scheme" type="string" optional="optional"/>
    </tag>
    <tag name="MODE">
      <attribute name="t" type="select">
        <option>prose</option>
        <option>verse</option>
        <option>uncertain</option>
      </attribute>
    </tag>
    <tag name="note" />
    <tag name="ORNAMENT"  empty="optional">
      <attribute name="drop" type="number" optional="optional" />
      <attribute name="letter" type="string" optional="optional" />
    </tag>
    <tag name="PAGE">
      <attribute name="n" type="number"/>
    </tag>
    <tag name="PN">
      <attribute name="n" type="number" optional="optional" renumber="no" />
    </tag>
    <tag name="POEM" depreciated="Use DIV with a name attrbute instead of POEM"/>
    <tag name="PROLOGUE" depreciated="Use FRONTMATTER or DIV instead of PROLOGUE"/>
    <tag name="PROP" empty="optional">
      <attribute name="item" type="string" optional="optional"/>
      <attribute name="desc" type="string" optional="optional"/>
    </tag>
    <tag name="PROSEQUOTE" depreciated="Use QUOTE instead of PROSEQUOTE.">
      <attribute name="source" type="string" optional="optional"/>
    </tag>
    <tag name="QLN" empty="empty" where="quarto">
      <attribute name="n" type="number"/>
    </tag>
    <tag name="QUOTE">
      <attribute name="source" type="string" optional="optional"/>
      <attribute name="type" type="select">
        <option>prose</option>
        <option>verse</option>
      </attribute>
    </tag>
    <tag name="R"/>
    <tag name="RA"/>
    <tag name="RDG"/>
    <tag name="RT"/>
    <tag name="RULE" empty="empty">
      <attribute name="n" type="number" optional="optional" empty="empty" renumber="no"/>
    </tag>
    <tag name="S"/>
    <tag name="SC"/>
    <tag name="SCENE">
      <attribute name="n" type="number"/>
      <attribute name="link" type="string" optional="optional" depreciated="Link attributes should be dropped from the text."/>
    </tag>
    <tag name="SD">
      <attribute name="t" type="list">
        <option>entrance</option>
        <option>exit</option>
        <option>setting</option>
        <option>sound</option>
        <option>delivery</option>
        <option>whoto</option>
        <option>action</option>
        <option>location</option>
        <option>other</option>
        <option>optional</option>
        <option>uncertain</option>
      </attribute>
    </tag>
    <tag name="SECTION" depreciated="Use DIV with a name attrbute instead of SECTION."/>
    <tag name="SIG">
      <attribute name="n" type="string" optional="optional" renumber="no" />
    </tag>
    <tag name="SP">
      <attribute name="norm" type="string"/>
    </tag>
    <tag name="SPACE" empty="empty">
      <attribute name="n" type="number" optional="optional" renumber="no" />
    </tag>
    <tag name="STANZA">
      <attribute name="n" type="number" />
    </tag>
    <tag name="SUB"/>
    <tag name="SUP"/>
    <tag name="SWASH">
      <attribute name="where" type="select">
        <option>before</option>
        <option>after</option>
        <option>both</option>
      </attribute>
    </tag>
    <tag name="TITLEHEAD"/>
    <tag name="TITLEPAGE" depreciated="Use DIV with a name attrbute instead of TITLEPAGE"/>
    <tag name="TLN" empty="empty">
      <attribute name="n" type="number"/>
    </tag>
    <tag name="VERSEQUOTE" depreciated="Use DIV with the type attribute instead of VERSEQUOTE.">
      <attribute name="source" type="string" optional="optional"/>
    </tag>
    <tag name="WLN" empty="empty">
      <attribute name="n" type="number" />
      <attribute name="wit" type="string" optional="optional" />
    </tag>
    <tag name="WORK">
      <attribute name="genre" type="string" empty="empty" optional="optional" depreciated="Use metadata instead of the genre attribute."/>
    </tag>
  </tags>
</schema>
